@using SmeCommerce.Models.EntityModels;
@model SmeCommerce.Models.EntityModels.CategoryListVM;
@{ 
    //List<Category> categoriesList = ViewBag.CategoryList;
    int SerialNo = 0;
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            @Model.Title
        </h3>
    </div>
    <div class="card-body">
        @Model.Description
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>
        <div class="card-tools">
            <a class= "btn btn-primary" asp-action="Create"> Create</a>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th style="width: 40px">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Category in Model.CategoryList)
                {
                    <tr>
                        <td>@(++SerialNo)</td>
                        <td>@Category.CategoryName</td>
                        <td>
                            @Category.Code
                        </td>
                        <td><a asp-action="Edit" asp-route-id="@Category.CategoryId" class="badge bg-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Category.CategoryId" class="badge bg-danger">Delete</a>
                        
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
</div>
